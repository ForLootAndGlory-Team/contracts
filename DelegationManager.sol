pragma solidity ^0.8.24;

contract DelegationManager {
    mapping(address => address) private delegateToUser; // Mappe l'adresse du délégué à celle de l'utilisateur
    mapping(address => address) private userToDelegate; // Mappe l'adresse de l'utilisateur à celle de son délégué

    /**
     * @dev Sets the delegate sender for the caller.
     * @param _delegateAddress The address of the delegate to be set.
     * @notice This function sets the delegate sender for the caller, allowing them to delegate their rights to another address.
     * @notice The delegate address cannot be set to address(0) (zero address) or the caller's own address.
     * @notice If the caller already had a delegate, the previous delegate will be reset.
     */
    function setDelegateSender(address _delegateAddress) external {
        require(_delegateAddress != address(0), "Delegate address cannot be 0");
        require(_delegateAddress != msg.sender, "Cannot delegate to oneself");

        // Réinitialiser l'ancien délégué si nécessaire
        address currentDelegate = userToDelegate[msg.sender];
        if (currentDelegate != address(0)) {
            delete delegateToUser[currentDelegate];
        }

        delegateToUser[_delegateAddress] = msg.sender;
        userToDelegate[msg.sender] = _delegateAddress;
    }

    /**
     * @dev Retrieves the delegate sender address associated with a given delegate address.
     * @param _delegateAddress The delegate address to retrieve the delegate sender for.
     * @return The delegate sender address if it is valid and current, otherwise returns the passed address.
     */
    function getDelegateSender(
        address _delegateAddress
    ) external view returns (address) {
        address user = delegateToUser[_delegateAddress];
        if (user != address(0) && userToDelegate[user] == _delegateAddress) {
            // Le délégué est valide et actuel, renvoie l'utilisateur
            return user;
        }
        // Aucun utilisateur associé ou la délégation n'est pas réciproque/actuelle, renvoie l'adresse passée
        return _delegateAddress;
    }

    function IsDelegateSender(
        address user,
        address _delegateAddress
    ) external view returns (bool) {
        address currentUser = delegateToUser[_delegateAddress];
        return user == currentUser;
    }

    function getSenderFromDelegate(
        address _delegateAddress
    ) external view returns (address) {
        return delegateToUser[_delegateAddress];
    }

    function getDelegateFromSender(
        address _senderAddress
    ) external view returns (address) {
        return userToDelegate[_senderAddress];
    }
}
