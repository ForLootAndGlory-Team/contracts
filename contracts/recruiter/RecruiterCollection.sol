pragma solidity ^0.8.24;

import {ERC721flagOZ} from "../assets/erc721oz/ERC721flagOZ.sol";
import {ReentrancyGuardUpgradeable} from "@openzeppelin/contracts-upgradeable/utils/ReentrancyGuardUpgradeable.sol";
import {IRecruiterCollection} from "../recruiter/IRecruiterCollection.sol";
import {Strings} from "@openzeppelin/contracts/utils/Strings.sol";
import {RandomNumberGenerator} from "../rng/RandomNumberGenerator.sol";

contract RecruiterCollection is
    ERC721flagOZ,
    ReentrancyGuardUpgradeable,
    RandomNumberGenerator
{
    using Strings for uint256;

    // URI
    string baseURI;
    string internal constant baseExtension = ".json";
    bool internal isPublic;
    bool internal isMintActive;
    mapping(address => uint256) internal whitelist;
    uint256 internal constant MAX_NFT = 10000;
    uint256 internal reservedNFT;
    mapping(address => bool) internal hasMint;

    IRecruiterCollection internal recruiterCollection;

    uint256[] private mintTokenIdSelector;

    uint256 private constant CHUNK_SIZE = 1000; // Taille de chaque chunk pour réduire le gas
    uint256 private currentIndex; // Suivi de l'index actuel pour la création de l'array

    error NotWhitelisted();
    error PublicPhaseNotActive();

    function mintWhitelist(
        address user,
        uint256 quantity
    ) external nonReentrant {
        require(quantity <= whitelist[user], "too low whitelisted spot!");
        require((totalSupply() + quantity) <= MAX_NFT, "Supply reach out!");
        whitelist[user] -= quantity;
        _batchMint(user, quantity);
    }

    function mintPublic() external nonReentrant {
        require(isMintActive, "Mint is not active!");
        if (!isPublic) revert PublicPhaseNotActive();
        require((totalSupply() + 1) <= MAX_NFT, "Supply reach out!");
        _batchMint(_msgSender(), 1);
    }

    function editWhitelist(
        address[] memory presaleAddresses,
        uint256[] memory amount
    ) external onlyRole(MINTER_ROLE) {
        for (uint256 i; i < presaleAddresses.length; i++) {
            whitelist[presaleAddresses[i]] += amount[i];
        }
    }

    function setBaseURI(
        string memory _newBaseURI
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        baseURI = _newBaseURI;
    }

    function setPublicMint() public onlyRole(DEFAULT_ADMIN_ROLE) {
        isPublic = !isPublic;
    }

    function setMintActive() public onlyRole(DEFAULT_ADMIN_ROLE) {
        isMintActive = !isMintActive;
    }

    function _baseURI() internal view override returns (string memory) {
        return baseURI;
    }

    function tokenURI(
        uint256 tokenId
    ) public view override returns (string memory) {
        require(
            exists(tokenId),
            "ERC721Metadata: URI query for nonexistent token"
        );

        string memory currentBaseURI = _baseURI();
        return
            bytes(currentBaseURI).length > 0
                ? string.concat(
                    currentBaseURI,
                    tokenId.toString(),
                    baseExtension
                )
                : "";
    }

    function _batchMint(address to, uint256 batchSize) internal override {
        uint256[] memory randomWords = getRandomNumbers(batchSize);
        for (uint i; i < batchSize; i++) {
            uint256 input = randomWords[i] % mintTokenIdSelector.length;
            uint256 currentTokenId = mintTokenIdSelector[input];
            _safeMint(to, currentTokenId);
            _removeFromArray(input);
        }
    }

    function hasSpot(address user) public view returns (uint256) {
        return whitelist[user];
    }

    function editUserWhitelist(
        address presaleAddress,
        uint256 amount
    ) public onlyRole(MINTER_ROLE) {
        whitelist[presaleAddress] += amount;
    }

    function _msgSender() internal view virtual override returns (address) {
        return msg.sender;
    }

    function _msgData()
        internal
        view
        virtual
        override
        returns (bytes calldata)
    {
        return msg.data;
    }

    function advanceCreateArray() public {
        require(currentIndex < MAX_NFT, "Array creation completed");
        uint256 endIndex = currentIndex + CHUNK_SIZE > MAX_NFT
            ? MAX_NFT
            : currentIndex + CHUNK_SIZE;
        for (uint256 i = currentIndex; i < endIndex; ++i) {
            mintTokenIdSelector.push(i + 1);
        }
        currentIndex = endIndex;
    }

    // Ajoutez une fonction pour vérifier si la création de l'array est complète
    function isArrayCreationComplete() public view returns (bool) {
        return currentIndex >= MAX_NFT;
    }

    function _removeFromArray(uint256 input) private {
        for (uint i = input; i < mintTokenIdSelector.length - 1; ++i) {
            mintTokenIdSelector[i] = mintTokenIdSelector[i + 1];
        }
        mintTokenIdSelector.pop();
    }

    function getMintTokenIdSelectorLength() external view returns (uint256)
    {
        return mintTokenIdSelector.length;
    }
}
