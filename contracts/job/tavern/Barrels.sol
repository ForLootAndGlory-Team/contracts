pragma solidity ^0.8.24;

import {ERC20} from "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import {ERC20Burnable} from "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import {AccessControl} from "@openzeppelin/contracts/access/AccessControl.sol";

contract Barrels is ERC20, ERC20Burnable, AccessControl {
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    uint256 private constant one = 1;
    uint256 private constant two = 2;

    uint256 public Halving;
    uint256 public dividedBy = 1;

    uint256 private constant supplyHalving = 1000000 * 10 ** 18;
    uint256 private currentSupplyHalving = 1000000 * 10 ** 18;
    mapping(address => bool) private _operators;

    event NewHalving(
        uint256 timestamp,
        uint256 newHalving,
        uint256 nextHalvingSupply
    );

    constructor() ERC20("barrels", "BARREL") {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function mint(address to, uint256 amount) public {
        uint256 amountByHalving = amount / dividedBy;
        _mint(to, amountByHalving);
        _updateHalving();
    }

    function burn(uint256 amount) public override {
        _burn(_msgSender(), amount);
        _updateHalving();
    }

    function transferFrom(
        address from,
        address to,
        uint256 value
    ) public override returns (bool) {
        address spender = _msgSender();
        if (!_isOperator(spender)) {
            _spendAllowance(from, spender, value);
        }
        _transfer(from, to, value);
        return true;
    }

    function _isOperator(address operator) internal view returns (bool) {
        return _operators[operator];
    }

    function setOperator(
        address operator,
        bool status
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _operators[operator] = status;
    }

    /**
     * @dev Burns a specified amount of tokens from the caller's account.
     * Emits a {Transfer} event with `to` set to the zero address.
     *
     * Requirements:
     * - The caller must have an allowance for `amount` tokens from `account`.
     * - The `amount` must not exceed the current allowance.
     *
     * @param account The address from which the tokens will be burned.
     * @param amount The amount of tokens to be burned.
     */
    function burnFrom(address account, uint amount) public override {
        uint256 currentAllowance = allowance(account, _msgSender());
        require(
            currentAllowance >= amount,
            "ERC20: burn amount exceeds allowance"
        );
        unchecked {
            _approve(account, _msgSender(), currentAllowance - amount);
        }
        _burn(account, amount);
        _updateHalving();
    }

    /**
     * @dev Updates the halving mechanism based on the current supply of tokens.
     * If the supply exceeds the current supply halving, the halving factor is increased,
     * and the dividedBy value is multiplied by two. If the supply falls below the current
     * supply halving minus the supply halving amount, the halving factor is decreased,
     * and the dividedBy value is divided by two.
     */
    function _updateHalving() internal {
        uint256 supply = totalSupply();
        if (supply > currentSupplyHalving) {
            Halving += one;
            uint256 newdivided = dividedBy * two;
            dividedBy = newdivided;
            currentSupplyHalving += supplyHalving;
            emit NewHalving(block.timestamp, Halving, (currentSupplyHalving));
        } else if (supply < (currentSupplyHalving - (supplyHalving))) {
            Halving -= one;
            uint256 newdivided = dividedBy / two;
            dividedBy = newdivided;
            currentSupplyHalving -= supplyHalving;
            emit NewHalving(block.timestamp, Halving, (currentSupplyHalving));
        }
    }

    /**
     * @dev Retrieves the value of the Halving variable.
     * @return The value of the Halving variable.
     */
    function getHalving() external view returns (uint256) {
        return Halving;
    }

    /**
     * @dev Retrieves the value of the dividedBy variable.
     * @return The value of the dividedBy variable.
     */
    function getDividedBy() external view returns (uint256) {
        return dividedBy;
    }

    function _msgSender() internal view virtual override returns (address) {
        return msg.sender;
    }

    function _msgData()
        internal
        view
        virtual
        override
        returns (bytes calldata)
    {
        return msg.data;
    }
}
