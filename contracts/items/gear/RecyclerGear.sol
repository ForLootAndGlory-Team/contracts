pragma solidity ^0.8.24;

import {ITheTreasureSea} from "../../thesea/ITheTreasureSea.sol";
import {IGearStorage} from "../../items/gear/IGearStorage.sol";
import {MathHelper} from "../../libraries/MathHelper.sol";
import {IERC721flagOZ} from "../../assets/erc721oz/IERC721flagOZ.sol";
import {IDelegationManager} from "../../IDelegationManager.sol";
import {LibGears} from "../../libraries/LibGears.sol";
import {LibErrors} from "../../libraries/LibErrors.sol";

contract RecyclerGear {
    using MathHelper for uint256;
    ITheTreasureSea internal theSea;
    IGearStorage internal gearStorage;
    IERC721flagOZ internal geartoken;
    IDelegationManager private deleguationManager;

    constructor(
        address _theSea,
        address _gearStorage,
        address _geartoken,
        address _deleguationManager
    ) {
        theSea = ITheTreasureSea(_theSea);
        gearStorage = IGearStorage(_gearStorage);
        geartoken = IERC721flagOZ(_geartoken);
        deleguationManager = IDelegationManager(_deleguationManager);
    }

    /**
     * @dev Recycles multiple gear items.
     * @param gearIds An array of gear item IDs to be recycled.
     * @notice This function can only be called by the owner of the gear items.
     * @notice If the caller is not the owner of any of the gear items, the function will revert.
     */
    function batchRecyclerGear(uint256[] memory gearIds) external {
        uint256 len = gearIds.length;
        for (uint256 i; i < len; ++i) {
            if (geartoken.ownerOf(gearIds[i]) != _DeleguateMsgSender())
                revert LibErrors.NotOwnerOfGear();
            _recyclerGear(gearIds[i]);
        }
    }

    /**
     * @dev Recycles a gear item.
     * 
     * Requirements:
     * - The caller must be the owner of the gear item.
     * 
     * @param gearId The ID of the gear item to be recycled.
     */
    function recyclerGear(uint256 gearId) external {
        if (geartoken.ownerOf(gearId) != _DeleguateMsgSender()) revert LibErrors.NotOwnerOfGear();
        _recyclerGear(gearId);
    }

    /**
     * @dev Recycles a gear item by burning it and minting a new item in return.
     * @param gearId The ID of the gear item to be recycled.
     */
    function _recyclerGear(uint256 gearId) internal {
        LibGears.Gear memory _gear = gearStorage.getGearStruct(gearId);
        uint256 amount = gearStorage.getAmountCoinToBurn() / 10;
        geartoken.burn(gearId);
        theSea.mint(_DeleguateMsgSender(), amount, uint256(_gear.rarity));
    }

    /**
     * @dev Returns the address of the message sender's delegate.
     * @return The address of the message sender's delegate.
     */
    function _DeleguateMsgSender() internal view returns (address) {
        return deleguationManager.getDelegateSender(msg.sender);
    }
}
