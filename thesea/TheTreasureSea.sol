        if (
            id ==
            uint256(LibTheTreasureSea.TheTreasureSeaEnum.ENDGAME_MAP_COMMON)
        ) {
            burn(_DeleguateMsgSender(), id, 1000);
            _mint(
                _DeleguateMsgSender(),
                uint256(LibTheTreasureSea.TheTreasureSeaEnum.ENDGAME_MAP_RARE),
                1,
                ""
            );
        } else if (
            id == uint256(LibTheTreasureSea.TheTreasureSeaEnum.ENDGAME_MAP_RARE)
        ) {
            burn(_DeleguateMsgSender(), id, 100);
            _mint(
                _DeleguateMsgSender(),
                uint256(
                    LibTheTreasureSea.TheTreasureSeaEnum.ENDGAME_MAP_LEGENDARY
                ),
                1,
                ""
            );
        } else {
            revert LibErrors.IdNotAllowed();
        }
    }

