contract TheTreasureSea is
    ERC1155Upgradeable,
    ERC1155BurnableUpgradeable,
    ERC1155SupplyUpgradeable,
    AccessControlUpgradeable,
    ReentrancyGuardUpgradeable
{
    using LibTheTreasureSea for LibTheTreasureSea.TheTreasureSeaEnum;
    bytes32 public constant URI_SETTER_ROLE = keccak256("URI_SETTER_ROLE");
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    uint256 internal constant BottlePerBarrel = 100;

    mapping(address => uint) internal compassWhitelist;
    mapping(address => bool) private _operators;

    string internal _name;
    string internal _symbol;

    IBarrels internal rhum;
    IDelegationManager private deleguationManager;

    function initialize(
        string memory _uriPrefix,
        IBarrels _rhum,
        IDelegationManager _deleguationManager
    ) public initializer {
        __ERC1155_init(_uriPrefix);
        __AccessControl_init();
        __ERC1155Burnable_init();
        __ERC1155Supply_init();
        __ReentrancyGuard_init();
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(URI_SETTER_ROLE, msg.sender);
        _name = "Treasure Sea";
        _symbol = "FLAG-R";
        rhum = _rhum;
        deleguationManager = _deleguationManager;
    }

    function setURI(string memory newuri) public onlyRole(URI_SETTER_ROLE) {
        _setURI(newuri);
    }

    // The following functions are overrides required by Solidity.
    function _update(address from, address to, uint256[] memory ids, uint256[] memory values)
        internal
        override(ERC1155Upgradeable, ERC1155SupplyUpgradeable)
    {
        super._update(from, to, ids, values);
    }

    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC1155Upgradeable, AccessControlUpgradeable)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    function burn(address account, uint256 id, uint256 value) public override {
        require(
            account == _msgSender() || isApprovedForAll(account, _msgSender()),
            "ERC1155: caller is not token owner or approved"
        );

        _burn(account, id, value);

        if (id == uint256(LibTheTreasureSea.TheTreasureSeaEnum.RHUM_BOTTLE)) {
            uint256 _value = (value * 10 ** 18) / BottlePerBarrel;
            require(rhum.approve(address(this), _value), "Failed to approve");
            rhum.burnFrom(address(this), _value);
        }
    }

    function isApprovedForAll(
        address account,
        address operator
    ) public view override returns (bool) {
        return (super.isApprovedForAll(account, operator) ||
            _isOperator(operator));
    }

    function _isOperator(address operator) internal view returns (bool) {
        return _operators[operator];
    }

    function setOperator(
        address operator,
        bool status
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        _operators[operator] = status;
    }

    // MAP MINTER and BURNER

    // Mint
    function mint(
        address user,
        uint256 amount,
        uint256 id
    ) external onlyRole(MINTER_ROLE) {
        _mint(user, id, amount, "");
    }

    /**
     * @dev Mints COMPASS tokens for whitelisted addresses.
     * @notice This function can only be called by addresses that are whitelisted in the `compassWhitelist` mapping.
     * @notice The number of COMPASS tokens minted is determined by the value stored in the `compassWhitelist` mapping for the caller's address.
     * @notice The `data` parameter is not used in this function.
     * @notice Reverts if the caller's address is not whitelisted.
     */
    function mintCompassWhitelist() external nonReentrant {
        if (compassWhitelist[msg.sender] == 0)
            revert LibErrors.NotWhitelisted();
        _mint(
            msg.sender,
            uint256(LibTheTreasureSea.TheTreasureSeaEnum.COMPASS),
            compassWhitelist[msg.sender],
            ""
        );
    }

    /**
     * @dev Adds multiple users to the compass whitelist with corresponding amounts.
     * Only the address with the MINTER_ROLE can call this function.
     * @param users An array of addresses to be added to the whitelist.
     * @param amounts An array of corresponding amounts for each user.
     */
    function addCompassWhitelistBatch(
        address[] memory users,
        uint256[] memory amounts
    ) external onlyRole(MINTER_ROLE) {
        uint256 len = users.length;
        for (uint256 i; i < len; ++i) {
            compassWhitelist[users[i]] += amounts[i];
        }
    }

    /**
     * @dev Adds the specified amount to the whitelist balance of the given user.
     * Only the address with the MINTER_ROLE can call this function.
     * @param user The address of the user to add to the whitelist.
     * @param amount The amount to add to the whitelist balance.
     */
    function addCompassWhitelist(
        address user,
        uint256 amount
    ) external onlyRole(MINTER_ROLE) {
        compassWhitelist[user] += amount;
    }

    /**
     * @dev Mints a specified amount of rhum bottles to the caller.
     * @param amount The amount of rhum bottles to mint.
     * @notice This function transfers the specified amount of rhum tokens from the caller to the contract,
     * and mints the corresponding amount of rhum bottles to the caller.
     * @notice The caller must have approved the contract to spend the specified amount of rhum tokens on their behalf.
     * @notice The minted rhum bottles are represented by the `LibTheTreasureSea.TheTreasureSeaEnum.RHUM_BOTTLE` token ID.
     * @notice This function is non-reentrant.
     */
    function mintRhumBottle(uint256 amount) external nonReentrant {
        uint256 amountBigUnit = amount * 10 ** 18;
        uint256 amountBottle = amount * BottlePerBarrel;
        require(
            rhum.transferFrom(
                _DeleguateMsgSender(),
                address(this),
                amountBigUnit
            ),
            "Failed to transfer"
        );
        _mint(
            _DeleguateMsgSender(),
            uint256(LibTheTreasureSea.TheTreasureSeaEnum.RHUM_BOTTLE),
            amountBottle,
            ""
        );
    }

