pragma solidity ^0.8.24;
import {LibTheTreasureSea} from "./LibTheTreasureSea.sol";
import {LibCharacters} from "./LibCharacters.sol";
import {LibShips} from "./LibShips.sol";

library LibTravels {
    enum MissionType {
        BOARDING,
        SAILING,
        CHARISMA,
        CARGO
    }
    struct ShipInfos {
        int32 bonusBoarding;
        int32 bonusSailing;
        int32 bonusCharisma;
        uint8 missionPoints;
        uint32 durability;
        uint32 boarding;
        uint32 sailing;
        uint32 charisma;
        uint32 cargoAmount;
        LibShips.ShipClass shipClass;
        LibCharacters.CharacterClass captainClass;
        address owner;
        uint256 shipId;
        uint256 missionTimer;
    }
    struct Battle {
        // Battle Point
        bool isEscape;
        bool isWin;
        uint8 attackerPoints;
        uint8 defenderPoints;
        //Boarding
        uint32 maxBoarding;
        uint32 midBoarding;
        //Sailing
        uint32 maxSailing;
        uint32 midSailing;
        //Charisma
        uint32 maxCharisma;
        uint32 midCharisma;
        // cargo amount
        uint32 cargoTransfer;
        // Result Escape
        uint32 resultEscapeSailing1;
        uint32 resultEscapeSailing2;
        // Result combat
        uint32 resultCombatBoarding;
        uint32 resultCombatBoarding2;
        uint32 resultCombatCharisma;
        // Result Negotiation
        uint32 resultNegotiationCharisma;
    }

    struct Mission {
        bool isActive;
        bool isWin;
        MissionType missionType;
        int32 bonusBoarding;
        int32 bonusSailing;
        int32 bonusCharisma;
        uint32 difficulty;
        uint32 bonusCargo;
    }

    function isEligibleForBonus(
        uint256 randomValue,
        uint256 bonusRange,
        uint256 userCompassBonus
    ) internal pure returns (bool) {
        return (randomValue % bonusRange) < userCompassBonus;
    }

    function getBoostMission(
        Mission memory mission,
        ShipInfos memory ship
    ) internal pure returns (int32 range) {
        if (mission.bonusSailing > 0) {
            if (ship.captainClass == LibCharacters.CharacterClass.SMUGGLER) {
                range += 10;
            } else if (
                ship.captainClass == LibCharacters.CharacterClass.CORSAIR
            ) {
                range += -10;
            }

            if (LibShips.ShipClass.SCHOONER == ship.shipClass) {
                range += 10;
            } else if (LibShips.ShipClass.SQUARE_RIG == ship.shipClass) {
                range += -10;
            }
        } else if (mission.bonusBoarding > 0) {
            if (ship.captainClass == LibCharacters.CharacterClass.PIRATE) {
                range += 10;
            } else if (
                ship.captainClass == LibCharacters.CharacterClass.SMUGGLER
            ) {
                range += -10;
            }

            if (LibShips.ShipClass.CARAVEL == ship.shipClass) {
                range += 10;
            } else if (LibShips.ShipClass.SCHOONER == ship.shipClass) {
                range += -10;
            }
        } else if (mission.bonusCharisma > 0) {
            if (ship.captainClass == LibCharacters.CharacterClass.CORSAIR) {
                range += 10;
            } else if (
                ship.captainClass == LibCharacters.CharacterClass.PIRATE
            ) {
                range += -10;
            }

            if (LibShips.ShipClass.SQUARE_RIG == ship.shipClass) {
                range += 10;
            } else if (LibShips.ShipClass.CARAVEL == ship.shipClass) {
                range += -10;
            }
        } else if (mission.bonusCargo > 0) {
            if (ship.captainClass == LibCharacters.CharacterClass.SMUGGLER) {
                range += 10;
            } else if (
                ship.captainClass == LibCharacters.CharacterClass.CORSAIR
            ) {
                range += -10;
            } else if (
                ship.captainClass == LibCharacters.CharacterClass.PIRATE
            ) {
                range += -10;
            }

            if (LibShips.ShipClass.SCHOONER == ship.shipClass) {
                range += 10;
            } else if (LibShips.ShipClass.SQUARE_RIG == ship.shipClass) {
                range += -10;
            } else if (LibShips.ShipClass.CARAVEL == ship.shipClass) {
                range += -10;
            }
        }

        return range;
    }
}
