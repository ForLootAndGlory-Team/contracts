pragma solidity ^0.8.24;

contract EloReward {
    uint256 private constant REWARD_MIN = 1e14; // 0.01% en base 1e18
    uint256 private constant REWARD_MAX = 1e16; // 1% en base 1e18
    uint256 private constant TROPHIES_MIN = 50;
    uint256 private constant TROPHIES_MAX = 5000;
    uint256 private constant SLOPE = 2e6; // 0.000002 en base 1e18

    // Fonction pour calculer la récompense
    function calculateReward(
        uint256 totalAmount,
        uint256 trophies
    ) internal pure returns (uint256) {
        if (trophies < TROPHIES_MIN) {
            return REWARD_MIN;
        } else if (trophies > TROPHIES_MAX) {
            return REWARD_MAX;
        }

        uint256 rewardPercentage = REWARD_MIN +
            SLOPE *
            (trophies - TROPHIES_MIN);
        uint256 actualReward = (totalAmount * rewardPercentage) / 1e18;
        return actualReward;
    }
}
